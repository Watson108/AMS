<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:paddingTop="5dp"
                android:text="成绩录入"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        <View
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"
                />

        <RelativeLayout
                style="@style/content_root"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="平时"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/score1_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <RelativeLayout
                style="@style/content_root"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="中考"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/score2_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <RelativeLayout
                style="@style/content_root"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="末考"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/score3_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <RelativeLayout
                style="@style/content_root"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="技能"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/score4_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>
        <RelativeLayout
                style="@style/content_root"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="综合"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/score5_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>
        <RelativeLayout
                style="@style/content_root"
                android:layout_width="fill_parent"
                >

            <TextView
                    android:id="@+id/remark_"
                    style="@style/self_info_item"
                    android:text="备注 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Spinner
                    android:layout_toRightOf="@+id/remark_"
                    android:id="@+id/remark_spinner"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_weight="1"
                    android:text="确定"
                    android:onClick="insertScore_OnClick"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:layout_weight="1"
                    android:text="取消"
                    android:onClick="cancle_OnClick"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
