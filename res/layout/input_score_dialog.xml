<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/root"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:paddingTop="5dp"
                android:text="成绩录入"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        <View
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"
                />
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="张光辉" android:textStyle="bold" android:id="@+id/name_tv"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="(B10050607)" android:layout_marginLeft="5dp" android:id="@+id/id_tv"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:text="录入状态: "
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp" android:textStyle="bold" android:id="@+id/input_status"
                      android:text=""/>
        </LinearLayout>
        <View
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                />
        <RelativeLayout
                style="@style/content_root_inputscore"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="平时"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/score1_et"
                    android:maxLength="6"
                    android:layout_alignParentRight="true"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:minWidth="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <RelativeLayout
                style="@style/content_root_inputscore"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="中考"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:minWidth="60dp"
                    android:id="@+id/score2_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <RelativeLayout
                style="@style/content_root_inputscore"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="末考"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:minWidth="60dp"
                    android:id="@+id/score3_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <RelativeLayout
                style="@style/content_root_inputscore"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="技能"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:minWidth="60dp"
                    android:id="@+id/score4_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>
        <RelativeLayout
                style="@style/content_root_inputscore"
                android:layout_width="fill_parent"
                >

            <TextView
                    style="@style/self_info_item"
                    android:text="综合"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:minWidth="60dp"
                    android:id="@+id/score5_et"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>
        <RelativeLayout
                style="@style/content_root_inputscore"
                android:layout_width="fill_parent"
                >

            <TextView
                    android:id="@+id/remark_"
                    style="@style/self_info_item"
                    android:text="备注 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Spinner
                    android:layout_toRightOf="@+id/remark_"
                    android:id="@+id/remark_spinner"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>
        <RelativeLayout
                style="@style/content_root_inputscore"
                android:layout_width="fill_parent"
                >
            <TextView
                    style="@style/self_info_item"
                    android:text="暂存"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <CheckBox android:layout_width="wrap_content"
                      android:id="@+id/onlysava_cb"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content"/>
            <View
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    />
        </RelativeLayout>

        <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/ok_btn"
                    android:layout_weight="1"
                    android:text="确定"
                    android:textColor="@color/selecor_tv"
                    android:onClick="insertScore_OnClick"
                    android:layout_width="fill_parent"
                    android:background="@drawable/selecor_btn"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp"/>
            <Button
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/selecor_tv"
                    android:text="取消"
                    android:onClick="cancle_OnClick"
                    android:background="@drawable/selecor_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
