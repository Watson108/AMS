<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            style="@style/gridview_root"
            >

        <TextView
                android:id="@+id/tv_self_info"
                style="@style/GridView_TV"
                android:text="@string/self_info"
                android:layout_alignParentLeft="true"
                android:drawableTop="@drawable/ic_launcher"
                android:onClick="gotoSelfInfoActivity"
                />

        <TextView
                android:id="@+id/tv_teaching_task"
                style="@style/GridView_TV"
                android:text="@string/teaching_task"
                android:layout_alignParentRight="true"
                android:drawableTop="@drawable/ic_launcher"
                />

        <TextView
                android:id="@+id/tv_teaching_play"
                style="@style/GridView_TV"
                android:text="@string/teaching_plan"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:drawableTop="@drawable/ic_launcher"
                />
    </RelativeLayout>

    <RelativeLayout
            style="@style/gridview_root"
            android:layout_width="match_parent"
            >

        <TextView
                android:id="@+id/tv_student_mark"
                style="@style/GridView_TV"
                android:text="@string/student_mark"
                android:layout_alignParentLeft="true"
                android:drawableTop="@drawable/ic_launcher"
                />

        <TextView
                android:id="@+id/tv_community"
                style="@style/GridView_TV"
                android:text="@string/community"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/ic_launcher"
                />

        <TextView
                android:id="@+id/tv_others"
                style="@style/GridView_TV"
                android:text="@string/others"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:drawableTop="@drawable/ic_launcher"
                />
    </RelativeLayout>

    <RelativeLayout
            style="@style/gridview_root"
            android:layout_width="match_parent"
            >

        <TextView
                android:id="@+id/tv_settings"
                android:text="@string/settings"
                style="@style/GridView_TV"
                android:drawableTop="@drawable/ic_launcher"
                />
    </RelativeLayout>
</LinearLayout>

