<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Splash" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="GridView_TV">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/selecor_tv</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/selecor_gridview</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="gridview_root">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="category">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="self_info_item">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/selecor_tv_name</item>
    </style>

    <style name="content">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/selecor_tv</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="content_root">
        <item name="android:background">@drawable/selector_content_root</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="tv_extend">
        <item name="android:textColor">@color/selecor_tv</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selecor_btn</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        </style>
</resources>