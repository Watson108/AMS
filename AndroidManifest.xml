<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.ghui.AMS"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="16"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:theme="@android:style/Theme.Holo.Light"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher">
        <activity android:name=".UI.SplashActivity"
                android:theme="@style/Theme.Splash"
                android:launchMode="singleTask"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:parentActivityName=".UI.MainActivity"
                android:name=".UI.SelfInfoActivity"
                android:label="@string/self_info">
        </activity>
        <activity
                android:name=".UI.MainActivity"
                android:label="@string/main_title">
        </activity>
        <activity android:name=".UI.CourseActivity"
                  android:parentActivityName=".UI.MainActivity"
                  android:label="承担课程"
                />
        <activity
                android:parentActivityName=".UI.MainActivity"
                android:name=".UI.TeachingTaskActivity"
                android:label="教学任务"/>
        <activity
                android:parentActivityName=".UI.MainActivity"
                android:name=".UI.GradesActivity"
                android:label="查看成绩"/>
        <activity
                android:parentActivityName=".UI.MainActivity"
                android:name=".UI.InputGradesActivity"
                android:label="成绩录入"/>
        <activity
                android:parentActivityName=".UI.MainActivity"
                android:name=".UI.OthersActivity"
                android:label="其它"/>
    </application>
</manifest>
